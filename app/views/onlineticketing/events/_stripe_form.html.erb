<form action="" method="POST" id="payment-form">
  <span class="payment-errors"></span>

  <div class="form-row">
    <label>
      <span>Name</span>
      <input type="text" data-strip="name" 
        class="customer-name"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Email</span>
      <input type="email" data-strip="email"
        class="customer-email"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Card Number</span>
      <input type="text" size="20" data-stripe="number"
        class="card-number"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span>
      <input type="text" size="4" data-stripe="cvc"
        class="card-cvc"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YYYY)</span>
      <input type="text" size="2" data-stripe="exp-month"
        class="card-expiry-month"/>
    </label>
    <span> / </span>
    <input type="text" size="4" data-stripe="exp-year"
      class="card-expiry-year"/>
  </div>

  <button type="submit" id="submit-seat-payment">
    Submit Payment
  </button>
  <br/>
  <button class="close-form">
    Close
  </button>
</form>